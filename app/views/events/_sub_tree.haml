%table.event_tree
  - events.each do |event|
    %tr
      %td.event{:class => "indent-#{event.event_subject.depth}"}
        = formatted_event(event)
        - if event.error
          = link_to_function 'details', "$(this).next('.error').toggle()"
          .error{style_display_none}
            - Rails.logger.ap event.error
            &= event.error[:message]

      %td.timestamp
        = formatted_event_timestamp(event)
