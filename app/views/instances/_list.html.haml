#environment_instances_container.tabular
  .box_header
    %h2
      = header_text
  .header
    .name
      Name
    .image_id
      Id
    .hardware_profile
      Hardware Profile
    .services
      Services
    .image_status
      Status
    .image_health
      Health
    .actions
      Actions
  - instances.each do |instance|
    - div_for(instance, :class=>'row') do
      = render :partial => 'instances/row', :locals => { :instance => instance }
    - javascript_tag do
      ="monitor_instance('#{status_environment_instance_path(instance.environment.id, instance.id)}', '##{dom_id(instance)}');"
    - if instances.empty?
      .row
        .name
          This environment has no running instances.
