%ul
  %li
    = form.label :name
    = form.text_field :name
  %li
    = form.label :cloud_profile
    - if form.object.new_record?
      = form.select :cloud_profile_id, cloud_profile_options(false)
    - else
      = form.object.cloud_profile.name_with_details
  %li
    = form.label :service
    = form.select :service_id, options_for_service_select(@artifact.service_id, &:allow_artifacts)
  %li
    = form.label :description
    = form.text_area :description, :rows => 5
