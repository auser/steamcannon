!!!
%html(xml:lang="en" xmlns="http://www.w3.org/1999/xhtml" lang="en")
  %head
    %meta(http-equiv="content-type" content="text/html; charset=UTF-8")
    %title Instances: #{controller.action_name}
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'scaffold'
    = stylesheet_link_tag 'custom'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js'
    = javascript_include_tag 'jquery.pulse.js'
    = javascript_include_tag 'application'

  %body.main-body
    #container
      #header
        %h1
          %a(href="http://jboss.org/stormgrind/projects/coolingtower.html") AppDeployer
        #header_nav
          - if current_user
            = link_to('Logout', user_session_path, :method => :delete)
      #contentcontainer
        #container_grey
          #main-contentwrapper
            #menu
              = render_navigation
            .formcontainer
              - if flash[:notice]
                %p.callout_success= flash[:notice]
              - if flash[:error]
                %p.callout_fail= flash[:error]

              = yield

          #one-col-corners
    .footer
      %p
        Powered by
        %a(href="http://jboss.org/stormgrind/projects/coolingtower.html") Cooling Tower
