#deployments_container
  %h2
    = header_text
  #deployments_header
    .deployment_artifact
      Artifact
    .deployment_environment
      Environment
  - deployments.each do |deployment|
    .deployment_row
      .deployment_artifact
        = link_to deployment.artifact_version.to_s, artifact_path(deployment.artifact_version.artifact)
      .deployment_environment
        = link_to deployment.environment.name, environment_path(deployment.environment)
      .deployment_delete
        - if deployment.deployed?
          = link_to 'Undeploy', deployment, :method => :delete, :confirm => "Are you sure you want to undeploy this artifact?"
        - else
          .current_state
            = deployment.current_state.humanize
  - if deployments.empty?
    .deployment_row
      .deployment_artifact
        = empty_text
