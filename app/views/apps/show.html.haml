%h2
  &= @app.name
%p
  = simple_format @app.description
= link_to 'Edit Application', edit_app_path(@app)
%br
%br

%h3
  Versions
= render :partial => "app_versions/list", :locals => { :app_versions => @app.app_versions, :empty_text => "This application has no versions." }

%p
  = link_to 'Create New Version', new_app_version_path(:app_id => @app.id)
%br
%h3
  Deployments
= render :partial => "deployments/list", :locals => { :deployments => @app.deployments, :empty_text => "This application has no deployments." }
%p
  &nbsp;
%br
%p
  = link_to 'View All Applications', apps_path
