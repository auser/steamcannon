#topology
  %h2 Topology
  - for image in @environment.environment_images
    - div_for( image ) do
      %h3
        = image.image.name
        - if image.can_start_more?
          = link_to 'Add', environment_instances_path(@environment.id, :environment_image_id => image.id), :method => :post
      %table
        - image.instances.each_with_index do |instance, i|
          = render :partial=>'/instances/row', :locals=>{ :instance=>instance }
          - javascript_tag do
            ="monitor_instance('#{status_environment_instance_path(instance.environment.id, instance.id)}', '##{dom_id(instance)}');"
