!!!
%html(xml:lang="en" xmlns="http://www.w3.org/1999/xhtml" lang="en")
  %head
    %meta(http-equiv="content-type" content="text/html; charset=UTF-8")
    %title #{controller.controller_name}: #{controller.action_name}
    = stylesheet_link_tag 'compiled/grid.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/text.css', :media => 'screen, print'
    = stylesheet_link_tag 'compiled/steamcannon.css', :media => 'screen, print'

    = stylesheet_link_tag 'jquery.ui-1.8.1/jquery-ui-1.8.1.custom.css'

    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js'
    = javascript_include_tag 'jquery.pulse.js'
    = javascript_include_tag 'jquery.sparkline.min.js'
    = javascript_include_tag 'jquery.modal.js'
    = javascript_include_tag 'application'

  %body.ninesixty{:class => dom_class_for_body}

    = render :partial=>'/layouts/top_links'
    = render :partial=>'/layouts/header'
    - unless @hide_navigation
      = render :partial=>'/layouts/navigation'

    #content
      .formcontainer
        - if flash[:error]
          %p.callout.fail= flash[:error]
        - if flash[:notice]
          %p.callout.success= flash[:notice]
        = yield
    .clearfix

    = render :partial=>'/layouts/footer'
